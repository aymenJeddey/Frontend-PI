@model Frontend_PI.Models.Product


<div class="container">
    <h4>
        Category:
        @Html.ActionLink(Model.category.name, "DisplayCategory", new { id = Model.category.id })
    </h4>
    <div class="row">
        <div class="col-md-5">
            @if (String.IsNullOrEmpty(Model.image))
            {
                <img src="~/Content/uploads/avatar.png" alt=" @Html.DisplayFor(model => model.title)" width="150px" height="150px" />
            }
            else
            {
                <img class="card-img-top" src="~/Content/uploads/@Html.DisplayFor(model => model.image)" alt=" @Html.DisplayFor(model => model.title)" />
            }
        </div>
        <div class="col-md-7">
            <h2> @Html.DisplayFor(model => model.title)</h2>
            <h5>Published at :  @Convert.ToDateTime(Model.publicationDate).ToString("dd-MMM-yyyy")</h5>

            <p>  @Html.DisplayFor(model => model.description) </p>

            <div>
                <h3> Price :   @Html.DisplayFor(model => model.price) $</h3>
            </div>


        </div>
    </div>
    <div class="row mt-4">

        <p>
            @* @Html.ActionLink("Edit", "Edit", new { id = Model.id }) *@
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>
    

