 @model IEnumerable<Frontend_PI.Models.Commande>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr class="bg-info">
        <th>
            @Html.DisplayNameFor(model => model.reference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.typePaiement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codePostal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.reference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.typePaiement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adresse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codePostal)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.id, reference = item.reference }) |
            @if (!Session["UserRole"].ToString().Equals("USER") && item.status.Equals("NEW"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            }
            @if (!item.status.Equals("NEW"))
            {
                <label>En cours</label>
            }
        </td>
    </tr>
}

</table>
