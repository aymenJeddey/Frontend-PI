@model IEnumerable<Frontend_PI.Models.DeliveryMan>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {


        $(".btn-default").click(function () {

            if (confirm('vous souhaitez confirmer la Suppression  ?')) {

                supprimer($(this).prop('name'));
            }

        });

        $(".btn-info").click(function () {

            window.location.href = "https://localhost:44304/DeliveryMan/CommandeByDeliveryMan/" + $(this).prop('name');

        });

        $(".btn-group").click(function () {

            window.location.href = "https://localhost:44304/DeliveryMan/Edit/" + $(this).prop('name');

        });



    }
    );

  

    function supprimer(id) {
        debugger;

        $.ajax({
            async: true,
            type: 'GET',
            dataType: 'JSON',
            contentType: 'application/json;charset=utf-8',
            url: '/DeliveryMan/Delete/' + id,

            success: function (data) {
     
                location.reload();

            },
            error: function (err) {
                location.reload();


            }


        })
    }
    </script>

@{
    ViewBag.Title = "Liste des Livreurs";
}

